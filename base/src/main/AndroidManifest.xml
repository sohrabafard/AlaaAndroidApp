<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.sanatisharif.android.konkur96">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />


    <application
        android:name="ir.sanatisharif.android.konkur96.app.AppConfig"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ala_ok"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode"
        tools:targetApi="n">

        <meta-data
            android:name="asset_statements"
            android:resource="@string/asset_statements" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="46ad5fd65bf082d38b16ad6dba97be9809b6fbc7" />

        <provider
            android:name="ir.sanatisharif.android.konkur96.utils.GenericFileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="ir.sanatisharif.android.konkur96.activity.SplashActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="default-url"
                android:value="https://alaatv.com/splash" />

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:pathPrefix="/splash"
                    android:host="alaatv.com"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:path="/"
                    android:host="alaatv.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name="ir.sanatisharif.android.konkur96.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="alaatv.com"
                    android:path="/c"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="alaatv.com"
                    android:pathPrefix="/product/"
                    android:scheme="https" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="alaatv.com"
                    android:pathPrefix="/login"
                    android:scheme="https" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="alaatv.com"
                    android:path="/shop"
                    android:scheme="https" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="alaatv.com"
                    android:pathPrefix="/zarinpal"
                    android:scheme="alla" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="alaatv.com"
                    android:pathPrefix="/c/"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="ir.sanatisharif.android.konkur96.activity.OnBoardingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ir.sanatisharif.android.konkur96.activity.SettingActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ir.sanatisharif.android.konkur96.activity.VideoPlayActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name="ir.sanatisharif.android.konkur96.account.AuthenticatorActivity"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="ir.sanatisharif.android.konkur96.activity.GalleryFullView"
            android:screenOrientation="portrait" />

        <activity
            android:name="ir.sanatisharif.android.konkur96.activity.PlayerMusicTabsIcon"
            android:screenOrientation="portrait" />

        <service android:name="ir.sanatisharif.android.konkur96.service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name="ir.sanatisharif.android.konkur96.service.AuthenticatorService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <receiver android:name="ir.sanatisharif.android.konkur96.service.NetworkChangedReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>


    </application>

</manifest>