<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/LightGrey"
    app:cardCornerRadius="0dp"
    android:focusable="true"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/White"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_item_more"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/shape_preload_image" />


            <TextView
                android:id="@+id/txt_titel_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgItem"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="Titel"
                android:textColor="#3A3A3A"
                android:textSize="12sp" />



            <TextView
                android:id="@+id/txtDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="Discount"
                android:textColor="@color/Red"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_price_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="Price"
                android:textColor="@color/txtColor"
                android:textSize="12sp"
                android:visibility="visible"/>

        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>