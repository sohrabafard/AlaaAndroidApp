<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/White</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

    </style>

    <style name="PreferenceThemeOverlay.v14">
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">14sp</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="android:textColorSecondary">@color/Gray</item>
    </style>

    <style name="MyRaidoButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/WhiteSmoke</item>
        <item name="android:textSize">@dimen/button</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/White</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <style name="customToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/White</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorPrimary">@color/White</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->

    <style name="spinner_style" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_example</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/White</item>
        <item name="tabIndicatorColor">@color/White</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="RepeatButtonStyle">
        <item name="android:textColor">@color/no_pagination_error_background</item>
        <item name="android:text">@string/no_pagination_network_error_button</item>
    </style>

