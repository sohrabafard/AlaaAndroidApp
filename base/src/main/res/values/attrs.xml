<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SlidingUpPanelLayout">
        <attr name="umanoPanelHeight" format="dimension" />
        <attr name="umanoShadowHeight" format="dimension" />
        <attr name="umanoParallaxOffset" format="dimension" />
        <attr name="umanoFadeColor" format="color" />
        <attr name="umanoFlingVelocity" format="integer" />
        <attr name="umanoDragView" format="reference" />
        <attr name="umanoScrollableView" format="reference" />
        <attr name="umanoOverlay" format="boolean"/>
        <attr name="umanoClipPanel" format="boolean"/>
        <attr name="umanoAnchorPoint" format="float" />
        <attr name="umanoInitialState" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
            <enum name="anchored" value="2" />
            <enum name="hidden" value="3" />
        </attr>
        <attr name="umanoScrollInterpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progressValue" format="integer" />
        <attr name="progressbarColor" format="color" />
        <attr name="progressBarThickness" format="dimension" />

    </declare-styleable>

    <!-- parent ItemView styleable -->
    <declare-styleable name="ParentItemView">
        <attr name="title" format="string" localization="suggested"/>
        <attr name="author" format="string"/>
        <attr name="viewCount" format="integer"/>
        <attr name="image" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomItemView" parent="ParentItemView">
        <attr name="title"/>
        <attr name="author"/>
        <attr name="viewCount"/>
        <attr name="image"/>
        <attr name="contentCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomShopItemView" parent="ParentItemView">
        <attr name="title"/>
        <attr name="author"/>
        <attr name="viewCount"/>
        <attr name="image"/>
        <attr name="price" format="string"/>
        <attr name="discount" format="string"/>
    </declare-styleable>

    <declare-styleable name="CollapsingTitleLayout">
        <attr name="expandedMargin" format="reference|dimension" />
        <attr name="expandedMarginStart" format="reference|dimension" />
        <attr name="expandedMarginBottom" format="reference|dimension" />
        <attr name="expandedMarginEnd" format="reference|dimension" />
        <attr name="expandedTextSize" format="reference|dimension" />
        <attr name="collapsedTextSize" format="reference|dimension" />
        <attr name="android:textAppearance" />
        <attr name="textSizeInterpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="CollapsingTextAppearance">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
    </declare-styleable>
</resources>
